@model AdventureWorks.Dto.OfertaDto;
@{
    ViewData["Title"] = "Eliminar Oferta";
}

<div class="rounded bg-light border my-2">


    <div class="container mb-3">

        <div class="row">
            <div class="col-12 text-center"><h3>Â¿Seguro quieres eliminar esta oferta?</h3></div>
            <div class="col-3"></div>
            <div class="col-3 d-grid gap-2"><a class="btn btn-success btn-lg"  asp-action="Eliminar" asp-route-id=@Model.Id>Si</a></div>
            <div class="col-3 d-grid gap-2">
                <a class="btn btn-danger btn-lg" asp-action="Ofertas">
                    No
                    </a></div>
            <div class="col-3"></div>
        </div>
        <div class="row p-2">
            <div class="col-4">
                @Html.DisplayFor(model => model.Descripcion)


            </div>
            <div class="col-3">
                @Html.DisplayFor(model => model.Tipo)

            </div>
            <div class="col-3">
                @Html.DisplayFor(model => model.Categoria)
            </div>
            <div class="col-1">@Html.DisplayFor(model => model.MinQty)</div>
            <div class="col-1">@Html.DisplayFor(model => model.MaxQty)</div>

        </div>
        <div class="row">
            <div class="col-3">
                <h3>@Html.DisplayFor(model => model.Porcentaje)</h3>
            </div>
            <div class="col-3">@Html.DisplayFor(model => model.FechaInicio)</div>
            <div class="col-3">@Html.DisplayFor(model => model.FechaInicio)</div>
            <div class="col-3">
                <button class="btn btn-primary" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapsebox"
                aria-expanded="false"
                aria-controls="collapsebox">
                <strong>Productos</strong>
                </button>
            </div>
        </div>
        <div class="container collapse" id="collapsebox">
            <div class="border rounded p-1">
                <div class="row">
                    @foreach (var producto in Model.Productos)
                    {
                        <div class="col-2 ">
                            <div class=" border rounded p-1 m-1">
                                <table>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => producto.Nombre)

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => producto.Precio)

                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-danger">
                                            @{
                                                decimal valorDesc = producto.Precio - (producto.Precio * Model.Porcentaje);
                                            }

                                            @Html.Raw(valorDesc)

                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    }

                </div>

            </div>

        </div>
    </div>
</div>
