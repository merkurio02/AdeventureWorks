
@model AdventureWorks.Dto.OfertaDto;

@{
    ViewData["Title"] = "Editar Oferta";
}
<h1>Crear Oferta</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">

            <div class="container mt-4">
                <form asp-action="Editar">
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" asp-for="Descripcion">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label">Tipo</label>
                        <input type="text" class="form-control" asp-for="Tipo">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Categoria" class="form-label">Categoría</label>
                        <input type="text" class="form-control" asp-for="Categoria">
                    </div>
                    <div class="mb-3">
                        <label asp-for="MinQty" class="form-label">Cantidad Mínima</label>
                        <input type="number" class="form-control" asp-for="MinQty">
                    </div>
                    <div class="mb-3">
                        <label asp-for="MaxQty" class="form-label">Cantidad Máxima</label>
                        <input type="number" class="form-control" asp-for="MaxQty">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Porcentaje" class="form-label">Porcentaje %</label>
                        <input type="text" class="form-control" asp-for="Porcentaje">
                    </div>"
                    <div class="mb-3">
                        <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                        <input type="date" class="form-control" asp-for="FechaInicio">
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaFin" class="form-label">Fecha de Fin</label>
                        <input type="date" class="form-control" asp-for="FechaFin">
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>